<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rocket.Q Perguntas e Respostas</title>
    <link rel="stylesheet" href="/styles/room.css">
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/modal.css">
    
    <script src="/scripts/main.js" defer type="module"></script>
   
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
</head>
    <body>
    
        <div id="room" class="content">

            <header>
                <a href="/"><img src="/image/Logo.svg" alt="rockets.q-logo"></a>

               <div class="buttons">
                   <div class="button outlined" id="room-id" data-id="<%= roomId %>">
                       #<%= roomId %>
                       <img src="/image/buttons/copy.svg" alt="copiar codigo">
                   </div>

                   <a href="/create-pass" class="button">
                       <img src="/image/buttons/users2.svg" alt="criar sala">
                       Criar Sala
                   </a>
               </div>
            </header>

            <main>

                <section id="question-form">
                    <h2>Faça sua pergunta</h2>

                    <form action="/question/create/<%= roomId %>" method="POST">
                        <label for-id="question" class="sr-only">O que você quer perguntar</label>

                        <textarea name="question" id="question"  placeholder="O que você quer perguntar?">
                        </textarea>

                        <footer>
                            <div>
                                <img src="/image/buttons/lock.svg" alt="cadeado">
                                Esta pergunta é anônima
                            </div>
                            <button>Enviar</button>
                        </footer>
                    </form>
                </section>

                <section id="questions">
                    <h2 class="sr-only">Perguntas</h2>

                    <div class="questions">

                        <% if(isQuestions ){%>
                            <%- include('parts/noquestions')   %>
                       <% } %> 

                        <% questions.forEach(questions => {%>

                            <div class="question-wrapper">
                                <div class="questions-content">
                                    <div class="user">
                                        <img src="/image/user 1.svg" alt="Avatar">
                                    </div>
                                    <div class="question">
                                        <p> <%= questions.titulo  %>  </p>
                                    </div>
                                </div>
                                
                                <div class="actions">
                                    <a href="#" class="check" data-id="<%=questions.id%>">
                                        <img src="/image/buttons/check.svg" alt="marcar como lida">
                                        Marcar como lida
                                    </a>
                                    <a href="#" class="delete" data-id="<%=questions.id%>">
                                        <img src="/image/buttons/trash.svg" alt="apagar">
                                        Excluir
                                    </a>
                                </div>
                            </div>

                       <%  }) %> 

                       
                      

                      
                            <% questionRead.forEach(questionRead => {%>

                                <div class="question-wrapper read">
                                    <div class="questions-content">
                                        <div class="user">
                                            <img src="/image/user 1.svg" alt="Avatar">
                                        </div>
                                        <div class="question">
                                            <p> <%= questionRead.titulo  %>  </p>
                                        </div>
                                    </div>
                                    
                                    <div class="actions">
                                       
                                        <a href="#" class="delete" data-id="<%=questionRead.id %>">
                                            <img src="/image/buttons/trash.svg" alt="apagar">
                                            Excluir
                                        </a>
                                    </div>
                                </div>

                           <% }) %> 
                        <!-------------------------------------------->
                        
                    </div>
                </section>

            </main>

        </div>

        
        <div class="modal-wrapper">
            <div class="modal">
                <h2>Excluir pergunta</h2>
                <p>Tem certeza que você deseja excluir esta pergunta?</p>

                <form action="#" method="POST">
                    <input type="password" name="password" placeholder="Senha">

                    <label for-id="password " class="sr-only">Digite sua senha</label>

                    <div class="buttons cancel">
                        <div class="button grey">Cancelar</div>
                        <button class="red">Excluir</button>
                    </div>
                </form>
            </div>
        </div>

    </body>
</html>